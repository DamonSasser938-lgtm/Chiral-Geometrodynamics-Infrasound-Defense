CID-P UNIT CELL SPECIFICATION v1.0

GEOMETRY_PROFILE:
  Type: "Hexagonal Reuleaux Triangle"
  Packing: "Honeycomb"
  Function: "Maximizes surface scrubbing area per unit volume."

HELIX_PARAMETERS:
  The "Twist" that converts Linear Pressure to Spin
  Chiral_Bias (Beta): 0.03  # The grip of the thread
  Decay_Rate: 1.618 (Phi)   # Golden Ratio tapering
  Draft_Angle: 1.325 deg    # Plastic Constant (Rho) - CRITICAL for impedance matching

LAYER_CONFIGURATION:
  Layer_A: "Left-Hand Twist"
  Layer_B: "Right-Hand Twist"
  Interlayer_Gap: "Banach-Tarski Void" (Distance = Cell_Width / Phi)

PLENUM_CHAMBER:
  Type: "Toroidal Mixing Node"
  Collision_Angle: 109.5 degrees (Tetrahedral)
  Venting: "Open to atmosphere (Passive)"

MATERIAL_PHYSICS:
  Stiffness: "High (Must not resonate < 20Hz)"
  Recommended: "Resin-infused Concrete, Dense Gypsum, Sintered Metal"
  Infill: "100% Solid"

THEORETICAL_LIMITS:
  Bandwidth: "Broadband (0.5 Hz - 1000 Hz)"
  Mechanism: "Topological Phase-Conjugation"


